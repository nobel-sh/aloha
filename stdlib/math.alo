fun min(a: number, b: number) -> number {
    if (a < b) {
        return a;
    }
    return b;
}

fun max(a: number, b: number) -> number {
    if (a > b) {
        return a;
    }
    return b;
}

fun abs(n: number) -> number {
    if (n < 0) {
        return -n;
    }
    return n;
}

fun clamp(value: number, minVal: number, maxVal: number) -> number {
    if (value < minVal) {
        return minVal;
    }
    if (value > maxVal) {
        return maxVal;
    }
    return value;
}
