import "stdlib/io.alo";

fun operation(left:number, right:number, op:number) -> number {
    mut result = 100;
    if (op == 0) {
       result = left+right;
    } else if (op == 1) {
       result = left - right;
    } else if (op == 2) {
       result = left * right;
    } else if (op == 3) {
       result = left / right;
    }
    return result;
}

fun main() -> number {
    mut result: number = operation(10,20,0);
    println("10+20:");
    printlnNum(result);

    result = operation(10,20,1);
    println("10-20:");
    printlnNum(result);

    result = operation(10,20,2);
    println("10*20:");
    printlnNum(result);

    result = operation(10,20,3);
    println("10/20:");
    printlnNum(result);

    return 0;
}
